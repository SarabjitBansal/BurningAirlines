<p id="notice"><%= notice %></p>

<h1>Airplanes</h1>

<div id="table">
<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Rows</th>
      <th>Columns</th>
      <th>Total seats</th>
      <th colspan="3"></th>
    </tr>
</div>

  </thead>

  <tbody>

    <div class="container-fluid">
      <nav>
        <% @airplanes.each do |airplane| %>
          <tr>
            <td><%= airplane.name %></td>
            <td><%= airplane.rows %></td>
            <td><%= airplane.columns %></td>
            <td><%= airplane.total_seats %></td>
            <td><%= link_to 'Show', airplane %></td>
            <td><%= link_to 'Edit', edit_airplane_path(airplane) %></td>
            <td><%= link_to 'Destroy', airplane, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            <% end %>
          </tr>
      </nav>
    </div>


  </tbody>
</table>

<br>

<%= link_to 'New Airplane', new_airplane_path %>
