<p id="notice"><%= notice %></p>

<div class="container">
  <h1>Flights</h1>
</div>

<table>
  <thead>
    <tr>
      <th>Airplane</th>
      <th>Flight no</th>
      <th>Origin</th>
      <th>Destination</th>
      <th>Date</th>
      <th>Avail seats</th>
      <!-- <th>Airplane</th> -->
      <th colspan="3"></th>
    </tr>

    <% @flights.each do |flight| %>

    <div class="container">
      <nav>
        <tr>
          <td><%= flight.airplane.name %></td>
          <td><%= flight.flight_no %></td>
          <td><%= flight.origin %></td>
          <td><%= flight.destination %></td>
          <td><%= flight.date %></td>
          <td><%= flight.avail_seats %></td>
          <!-- <td><%= flight.airplane_id %></td> -->
          <td><%= link_to 'Show', flight %></td>
          <td><%= link_to 'Edit', edit_flight_path(flight) %></td>
          <td><%= link_to 'Destroy', flight, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      </nav>
    </div>

    <% end %>
  </thead>

  <tbody>

  </tbody>
</table>

<br>

